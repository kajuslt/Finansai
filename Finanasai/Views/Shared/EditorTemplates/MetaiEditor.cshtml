@using Kendo.Mvc.UI
@(Html.Kendo().DropDownList()
    .Name("Metai") // Name of the widget should be the same as the name of the property
    .DataValueField("Id") // The value of the dropdown is taken from the EmployeeID property
    .DataTextField("Pavadinimas") // The text of the items is taken from the EmployeeName property
    .BindTo((System.Collections.IEnumerable)ViewData["metai"]) // A list of all employees which is populated in the controller
)